<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F7">

    <!-- 居中输入区域 -->
    <LinearLayout
        android:id="@+id/layoutHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加服务器"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"/>

        <!-- 第一行：别名 -->
        <EditText
            android:id="@+id/etAlias"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#F0F0F0"
            android:hint="别名 (例如: 家里NAS)"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="16sp"
            android:inputType="text"
            android:singleLine="true"
            android:layout_marginBottom="10dp"/>

        <!-- 第二行：IP和端口 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etUrl"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#F0F0F0"
                android:hint="IP / 域名"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="16sp"
                android:inputType="textUri"
                android:singleLine="true"/>

            <View android:layout_width="10dp" android:layout_height="1dp"/>

            <EditText
                android:id="@+id/etPort"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="#F0F0F0"
                android:hint="端口"
                android:gravity="center"
                android:inputType="number"
                android:text="80"
                android:singleLine="true"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnGo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#007AFF"
            android:text="连接并监控"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史记录"
            android:layout_marginTop="20dp"
            android:textColor="#888888"
            android:textSize="12sp"/>

        <ListView
            android:id="@+id/listViewHistory"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:divider="#E0E0E0"
            android:dividerHeight="1dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/webviewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomBar"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="主页"
            android:textColor="#333333"/>
        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="刷新"
            android:textColor="#333333"/>
        <Button
            android:id="@+id/btnSwitch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="切换(0)"
            android:textColor="#007AFF"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/btnClose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="关闭"
            android:textColor="#FF3B30"/>
        <Button android:id="@+id/btnTabSettings" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="规则" />

        <Button android:id="@+id/btnToggleNotify" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="保活" />

    </LinearLayout>

</RelativeLayout>
